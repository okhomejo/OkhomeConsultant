<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#22000000" />
            <corners android:radius="30dp" />
            <gradient android:angle="90" android:startColor="#ee000000" android:endColor="#33000000"/>


        </shape>
    </item>
    <!-- White Top color -->
    <item android:bottom="3.5dp"  >
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <solid android:color="@color/colorOkhome" />
            <stroke android:color="#11000000" android:width="1px"/>
        </shape>


    </item>

</layer-list>