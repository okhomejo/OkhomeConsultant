<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#11000000" />
            <gradient android:angle="45" android:startColor="#ee000000" android:endColor="#00000000"/>


        </shape>
    </item>
    <!-- White Top color -->
    <item android:bottom="1.5dp" android:right="1.5dp" >
        <shape android:shape="oval" >
            <solid android:color="#ffffff" />
            <stroke android:color="#22000000" android:width="1px"/>
        </shape>


    </item>

</layer-list>