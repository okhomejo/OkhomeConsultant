<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.activity.account.AuthActivity">


    <RelativeLayout
        android:id="@+id/actPoint_vgTop"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            style="@style/FontOpenSansRegular"
            android:layout_centerInParent="true"
            android:id="@+id/actPoint_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Welcome to Okhome"
            android:textSize="16sp"
            android:textColor="@color/colorGray"
            android:layout_centerVertical="true" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40dp" android:paddingRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@+id/actSignup_vgTop"
                android:layout_above="@+id/actSignup_vgBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View android:layout_width="1px" android:layout_height="30dp" android:background="#55000000"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="140dp"
                    android:src="@drawable/logo_text"
                    android:layout_height="wrap_content" android:adjustViewBounds="true"/>
                <View android:layout_width="1px" android:layout_height="30dp" android:background="#55000000"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>


            <TextView
                style="@style/FontOpenSansLight"
                android:textColor="@color/colorBlueGray"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:text="If you want to say something something,\nWrite it down here"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/FontOpenSansRegular"
                    android:textColor="@color/colorOkhome"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="13sp"
                    android:text="Curious about being OKHOME Consultant?"/>

            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp" android:background="#33000000"/>
                <LinearLayout
                    android:background="#ffffff"
                    android:paddingLeft="6dp" android:paddingRight="6dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:alpha="0.8"
                        android:adjustViewBounds="true"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" android:src="@drawable/ic_downarrow"/>

                </LinearLayout>



            </FrameLayout>


            <LinearLayout
                android:layout_marginTop="24dp"
                android:alpha="0.4"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>
                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_marginRight="4dp"
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp" android:background="@color/colorLightBlueGray"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activityAuth_vbtnSignUp"
                android:gravity="center"
                android:background="@color/colorOkhome"
                android:paddingTop="10dp" android:paddingBottom="10dp"
                android:layout_width="220dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_downarrow_white"/>

                </LinearLayout>

                <TextView
                    style="@style/FontOpenSansLight"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Sign up"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activityAuth_vbtnSignIn"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@color/colorLightBlueGray"
                android:paddingTop="10dp" android:paddingBottom="10dp"
                android:layout_width="220dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_width="18dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_pushlogo_white"/>

                </LinearLayout>



                <TextView
                    style="@style/FontOpenSansLight"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Sign in"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

            </LinearLayout>



        </LinearLayout>

        <View android:layout_width="1px" android:layout_height="10dp" android:background="#55000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/actFillUpUserInfo_vgTop"
            android:layout_marginTop="15dp"/>
        <View android:layout_width="1px" android:layout_height="10dp" android:background="#55000000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>






</LinearLayout>
