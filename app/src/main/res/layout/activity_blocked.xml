<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.etc.BlockedActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorOkhome"
        android:id="@+id/actBlocked_vgTop"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <LinearLayout
            android:layout_marginRight="6dp"
            android:id="@+id/actBlocked_vbtnX"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="0.9"
                android:src="@drawable/ic_action_back_white" />

        </LinearLayout>

        <TextView
            style="@style/FontOpenSansLight"
            android:textColor="#ffffff"
            android:id="@+id/actBlocked_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Access blocked"
            android:textSize="21dp"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/actBlocked_tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontOpenSansLight"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Sorry, access blocked!"/>

        <TextView
            android:id="@+id/actBlocked_tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontOpenSansLight"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="November 2, 2018"/>


        <TextView
            android:id="@+id/actBlocked_tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontOpenSansLight"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="Reason why the user access has been blocked will be displayed here."/>

    </LinearLayout>

    <Button
        android:id="@+id/actBlocked_btnContact"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@color/colorOkhome"
        android:textColor="@android:color/white"
        style="?android:attr/borderlessButtonStyle"
        android:text="Contact OKHome"/>
</RelativeLayout>