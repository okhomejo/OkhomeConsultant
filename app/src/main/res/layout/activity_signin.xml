<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.account.AuthActivity">


    <RelativeLayout
        android:id="@+id/actSignup_vgTop"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/actSignIn_vbtnClose"
            android:alpha="0.6"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_width="14dp"
            android:layout_height="wrap_content" android:src="@drawable/ic_x" />

        <TextView
            style="@style/FontOpenSansRegular"
            android:textColor="@color/colorGray"
            android:layout_centerInParent="true"
            android:id="@+id/actPoint_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Sign in"
            android:textSize="17sp"
            android:layout_centerVertical="true" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/actSignup_vgTop"
        android:layout_above="@+id/actSignup_vgBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View android:layout_width="1px" android:layout_height="30dp" android:background="#55000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="140dp"
            android:src="@drawable/logo_text"
            android:layout_height="wrap_content" android:adjustViewBounds="true"/>
        <View android:layout_width="1px" android:layout_height="30dp" android:background="#55000000"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>



    <!-- bottom-->
    <LinearLayout
        android:id="@+id/actSignup_vgBottom"
        android:paddingBottom="34dp"
        android:layout_alignParentBottom="true"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/actSignIn_etEmail"
                style="@style/FontOpenSansLight"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_common_edittext"
                android:lines="1"
                android:textSize="16sp"
                android:gravity="center"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/actSignIn_etPassword"
                style="@style/FontOpenSansLight"
                android:inputType="textPassword"
                android:background="@drawable/bg_common_edittext"
                android:lines="1"
                android:textSize="16sp"
                android:gravity="center"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
        <!--term -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FontOpenSansLight"
                android:id="@+id/actSignUp_tvbtnTerm"
                android:textColor="@color/colorOkhome"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="Forgot password or Email"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:id="@+id/actSignIn_vbtnSignin"
            android:gravity="center"
            android:background="@color/colorOkhome"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_width="180dp"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" android:src="@drawable/ic_downarrow_white"/>

            </LinearLayout>

            <TextView
                style="@style/FontOpenSansLight"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Sign in"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

        </LinearLayout>



        <RelativeLayout
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/actMain_tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

            <View
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/actMain_tvSubTitle"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

            <TextView
                style="@style/FontOpenSansLight"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/actMain_tvSubTitle"
                android:text="You can also sign-in with below method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@color/colorLightBlueGray"
                android:textSize="12.5sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/actSignin_vbtnGoogle"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp" android:src="@drawable/ic_googleplus2"/>

                <TextView
                    style="@style/FontOpenSansRegular"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorGray"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="13sp"
                    android:text="Connect with Google email"/>
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>



</RelativeLayout>
