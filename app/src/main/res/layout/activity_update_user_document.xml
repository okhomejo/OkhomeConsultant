<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.activity.account.AuthActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorOkhome"
        android:id="@+id/actUpdateUserDocu_vgTop"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <LinearLayout
            android:layout_marginRight="6dp"
            android:id="@+id/actLocation_vbtnX"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="0.9"
                android:src="@drawable/ic_action_back_white" />

        </LinearLayout>

        <TextView
            style="@style/FontOpenSansLight"
            android:textColor="#ffffff"
            android:id="@+id/actPoint_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Update information"
            android:textSize="21dp"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/actUpdateUserDocu_vgTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" android:background="#16000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#22000000"/>
        <LinearLayout
            android:paddingTop="4dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <!-- item -->
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_common_edittext"
                android:id="@+id/actUpdateUserDocument_vgPhoto"
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textColor="@color/colorLightBlueGray"
                    android:textSize="14sp"
                    android:text="PHOTO"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="46dp"
                        android:layout_height="46dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/actUpdateUserDocument_ivPhoto"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:src="@drawable/circle_stroke" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- item -->
            <LinearLayout
                android:id="@+id/actUpdateUserDocument_llName"
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:background="@drawable/bg_common_edittext"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textColor="@color/colorLightBlueGray"
                    android:textSize="14sp"
                    android:text="NAME"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true" />

                <EditText
                    android:textColor="@color/colorBlueBlack"
                    android:background="@drawable/bg_edittext_inactive"
                    android:id="@+id/actUpdateUserDocument_tvName"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:hint="what is your name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorLightBlueGray3"/>
            </LinearLayout>

            <!-- item -->
            <RelativeLayout
                android:id="@+id/actUpdateUserDocument_vgbtnPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bg_common_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <TextView
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textColor="@color/colorLightBlueGray"
                        android:textSize="14sp"
                        android:text="PHONE"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:textColor="@color/colorBlueBlack"
                        android:id="@+id/actUpdateUserDocument_tvPhone"
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textSize="15sp"
                        android:inputType="phone"
                        android:hint="Input your phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/colorLightBlueGray3"/>
                </LinearLayout>
                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_right_simplearrow_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!-- item -->
            <RelativeLayout
                android:id="@+id/actUpdateUserDocument_vgbtnGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bg_common_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <TextView
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textColor="@color/colorLightBlueGray"
                        android:textSize="14sp"
                        android:text="GENDER"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:textColor="@color/colorBlueBlack"
                        android:id="@+id/actUpdateUserDocument_tvGender"
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textSize="15sp"
                        android:hint="Input your gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/colorLightBlueGray3"/>
                </LinearLayout>
                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_right_simplearrow_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <!-- item -->
            <RelativeLayout
                android:id="@+id/actUpdateUserDocument_vgbtnAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bg_common_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <TextView
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textColor="@color/colorLightBlueGray"
                        android:textSize="14sp"
                        android:text="ADDRESS"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:textColor="@color/colorBlueBlack"
                        android:id="@+id/actUpdateUserDocument_tvAddress"
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textSize="15sp"
                        android:hint="Input your address"
                        android:ellipsize="end"
                        android:layout_marginRight="24dp"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/colorLightBlueGray3"/>
                </LinearLayout>

                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_right_simplearrow_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/actUpdateUserDocument_vbtnCancel"
            android:gravity="center"
            android:background="@color/colorLightBlueGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_close_bold_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorOkhome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="19dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/actUpdateUserDocument_vbtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/circle_appcolor_shadow"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_white"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
