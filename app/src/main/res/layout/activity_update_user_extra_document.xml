<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.activity.account.AuthActivity">

    <RelativeLayout
        android:id="@+id/common_vgTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height">

        <LinearLayout
            android:id="@+id/common_vbtnClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_leftarrow" />

        </LinearLayout>


        <TextView
            style="@style/FontOpenSansLight"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:id="@+id/actPoint_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="PROFILE"
            android:textSize="@dimen/common_topbar_title_size"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/common_vgTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="8dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgNIK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp">

                        <TextView
                            android:background="@null"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="14sp"
                            android:text="NIK"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/actUpdateUserExtraDoc_tvNIK"
                            android:background="@null"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlueBlack"
                            android:hint="What is your NIK"
                            android:inputType="number"
                            android:maxLength="16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/colorLightBlueGray3"/>
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_simplearrow_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#22000000"/>

                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="57dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="14sp"
                            android:text="FAMILY"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/actUpdateUserExtraDoc_tvMarried"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textSize="15sp"
                            android:hint="Choose it."
                            android:textColor="@color/colorBlueBlack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/colorLightBlueGray3"/>
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_simplearrow_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#22000000"/>

                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgReligion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="57dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="14sp"
                            android:text="RELIGION"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/actUpdateUserExtraDoc_tvReligion"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlueBlack"
                            android:hint="Choose it."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/colorLightBlueGray3"/>
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_simplearrow_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#22000000"/>

                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserDocument_vgbtnAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="66dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="14sp"
                            android:text="HAVE A BIKE?"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkBikeYES"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkBikeYES"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="14sp"
                                    android:text="YES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkBikeNO"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkBikeNO"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="14sp"
                                    android:text="NO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#22000000"/>

                <!-- item -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingBottom="19dp" android:paddingTop="19dp"
                        android:orientation="vertical"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="14sp"
                            android:text="ARE YOU OKAY WITH CLEANING THE HOUSE WITH DOG?"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_marginTop="9dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkDogYES"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkDogYES"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="14sp"
                                    android:text="YES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkDogNO"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkDogNO"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="14sp"
                                    android:text="NO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#22000000"/>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/actUpdateUserDocument_vbtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/circle_lightblue_shadow"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_white"/>
        </LinearLayout>

    </LinearLayout>

