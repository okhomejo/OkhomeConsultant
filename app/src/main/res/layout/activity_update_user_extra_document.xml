<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="id.co.okhome.consultant.view.account.AuthActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorOkhome"
        android:id="@+id/actUpdateUserDocu_vgTop"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <LinearLayout
            android:layout_marginRight="6dp"
            android:id="@+id/actLocation_vbtnX"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:alpha="0.9"
                android:adjustViewBounds="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_action_back_white" />

        </LinearLayout>

        <TextView
            style="@style/FontOpenSansLight"
            android:textColor="#ffffff"
            android:id="@+id/actPoint_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Update information"
            android:textSize="21dp"
            android:layout_centerVertical="true" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/actUpdateUserDocu_vgTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" android:background="#16000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#22000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="4dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- item -->
                <LinearLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgNIK"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        android:background="@drawable/bg_common_edittext"
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:textColor="@color/colorLightBlueGray"
                        android:textSize="15sp"
                        android:text="NIK"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:id="@+id/actUpdateUserExtraDoc_etNIK"
                        android:background="@drawable/bg_edittext_inactive"
                        android:gravity="center_vertical"
                        style="@style/FontOpenSansLight"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:hint="What is your NIK"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/colorLightBlueGray3"/>
                </LinearLayout>

                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/bg_common_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="58dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="15sp"
                            android:text="MARRIED"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/actUpdateUserExtraDoc_tvMarried"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textSize="16sp"
                            android:hint="Choose it."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/colorLightBlueGray3"/>
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_simplearrow_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserExtraDoc_vgReligion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/bg_common_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="58dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="15sp"
                            android:text="RELIGION"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/actUpdateUserExtraDoc_tvReligion"
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textSize="16sp"
                            android:hint="Choose it."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/colorLightBlueGray3"/>
                    </LinearLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_simplearrow_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <!-- item -->
                <RelativeLayout
                    android:id="@+id/actUpdateUserDocument_vgbtnAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/bg_common_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="66dp">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="15sp"
                            android:text="HAVE A BIKE?"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkBikeYES"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkBikeYES"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="15sp"
                                    android:text="YES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkBikeNO"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkBikeNO"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="15sp"
                                    android:text="NO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <!-- item -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingBottom="19dp" android:paddingTop="19dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_common_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center_vertical"
                            style="@style/FontOpenSansLight"
                            android:textColor="@color/colorLightBlueGray"
                            android:textSize="15sp"
                            android:text="ARE YOU OKAY WITH CLEANING THE HOUSE WITH DOG?"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkDogYES"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkDogYES"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="15sp"
                                    android:text="YES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>

                            <!-- check item -->
                            <LinearLayout
                                android:id="@+id/actUpdateUserExtraDoc_vgChkDogNO"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/actUpdateUserExtraDoc_ivChkDogNO"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_check_not_deep"
                                    android:adjustViewBounds="true"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center_vertical"
                                    style="@style/FontOpenSansLight"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="15sp"
                                    android:text="NO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/actUpdateUserDocument_vbtnCancel"
            android:gravity="center"
            android:background="@color/colorLightBlueGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_close_bold_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/actUpdateUserDocument_vbtnOk"
            android:gravity="center"
            android:background="@color/colorOkhome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="19dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
