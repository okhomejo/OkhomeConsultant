<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:paddingTop="18dp" android:paddingBottom="18dp"
            android:background="@color/colorOkhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialogCommonList_tvTitle"
                style="@style/FontOpenSansLight"  android:textColor="#ffffff"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="THE TITLE"
                android:textSize="20sp" android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/dialogCommonList_vbtnX"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/actSignup_vbtnClose"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_x_white" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/dialogCommonList_tvSubTitle"
            android:layout_marginTop="2dp"
            style="@style/FontOpenSansLight"  android:textColor="@color/colorBlueGray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="When using OKHOME, Be aware of Monyang."
            android:textSize="15sp" android:layout_centerVertical="true" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialogCommonList_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>
