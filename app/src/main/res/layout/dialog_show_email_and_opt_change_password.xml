<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center"
            android:id="@+id/dialogShowEmailAndOptChangePassword_tvTitle"
            style="@style/FontOpenSansLight"  android:textColor="@color/colorGray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="THE TITLE"
            android:textSize="30sp" android:layout_centerVertical="true" />

        <TextView
            android:gravity="center"
            android:id="@+id/dialogShowEmailAndOptChangePassword_tvSubTitle"
            android:layout_marginTop="2dp"
            style="@style/FontOpenSansLight"  android:textColor="@color/colorBlueGray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Signed up by Email"
            android:textSize="15sp" android:layout_centerVertical="true" />

        <TextView
            android:gravity="center"
            android:padding="12dp"
            android:id="@+id/dialogShowEmailAndOptChangePassword_tvbtnChangePassword"
            style="@style/FontOpenSansLight"  android:textColor="@color/colorOkhome"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WANNA CHANGE PASSWORD ALSO?"
            android:textSize="13sp" android:layout_centerVertical="true" />
    </LinearLayout>


    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/dialogShowEmailAndOptChangePassword_vbtnOk"
            android:layout_weight="10"
            android:gravity="center"
            android:background="@color/colorOkhomeLight2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
