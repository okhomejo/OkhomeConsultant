<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            style="@style/FontOpenSansLight"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WORK EXPERIENCE"
            android:textSize="28dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_marginTop="12dp"
            style="@style/FontOpenSansLight"
            android:textColor="@color/colorBlueGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What work did you do?"
            android:textSize="15sp" android:layout_centerVertical="true" />


        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/dialogWorkExp_etPosition"
                    style="@style/FontOpenSansLight"
                    android:textCursorDrawable="@drawable/cursor_appcolor"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    android:textColor="#dd000000"
                    android:inputType="text"
                    android:textColorHint="#33000000"
                    android:background="@null"
                    android:hint="Your position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#000000" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontOpenSansLight"
            android:textColor="@color/colorBlueGray"
            android:textSize="15sp"
            android:text="How long have you been working?"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="11"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dialogWorkExp_tvFromDate"
                        style="@style/FontOpenSansLight"
                        android:textCursorDrawable="@drawable/cursor_appcolor"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp" android:paddingBottom="12dp"
                        android:inputType="date"
                        android:textSize="15sp"
                        android:textColor="#dd000000"
                        android:textColorHint="#33000000"
                        android:background="@null"
                        android:hint="From"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px" android:background="#000000" />
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=" - "/>


                <LinearLayout
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dialogWorkExp_tvToDate"
                        style="@style/FontOpenSansLight"
                        android:textCursorDrawable="@drawable/cursor_appcolor"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp" android:paddingBottom="12dp"
                        android:inputType="datetime"
                        android:textSize="15sp"
                        android:textColor="#dd000000"
                        android:textColorHint="#33000000"
                        android:background="@null"
                        android:hint="To"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px" android:background="#000000" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/dialogWorkExp_vBtnCancel"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/colorOkhomeLight2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="17dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_close_bold_white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialogWorkExp_vBtnOk"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/colorOkhomeLight2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
