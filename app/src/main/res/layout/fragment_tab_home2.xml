<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:background="#12000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#22000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--profile-->
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="20dp" android:paddingRight="20dp"
                android:paddingTop="20dp" android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- sample datas -->

                <FrameLayout
                    android:layout_marginRight="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_model4"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:src="@drawable/circle_stroke" />
                </FrameLayout>


                <LinearLayout
                    android:layout_toRightOf="@+id/main_vgProfile"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/FontOpenSansLight"
                                android:text="PROFILE"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorLightBlueGray"/>
                        </LinearLayout>



                        <RelativeLayout
                            android:layout_marginTop="-3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/FontOpenSansRegular"
                                    android:text="Michel Bay"
                                    android:textSize="22sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorDeepGray"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/FontOpenSansLight"
                                android:text="Trainee, 32, Male"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlueGray"
                                android:layout_centerVertical="true" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true">

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#44000000" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:src="@drawable/ic_setting_type3" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp" android:background="#06000000"/>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#26000000"/>



        <LinearLayout
            android:paddingTop="6dp" android:paddingLeft="25dp" android:paddingRight="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="40dp"
                    style="@style/FontOpenSansLight"
                    android:text="TRANING STATUS"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightBlueGray"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="22dp"
                    android:background="#000000"
                    android:layout_width="1px"
                    android:layout_height="98dp" />

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:text="Basic Training 1"
                                    android:textSize="15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlueBlack"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>
                            <TextView
                                android:layout_alignParentRight="true"
                                style="@style/FontOpenSansLight"
                                android:text="2/4"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorLightBlueGray"
                                android:layout_centerVertical="true" />


                        </RelativeLayout>

                        <!-- graph -->
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="7dp">
                                <View
                                    android:background="@drawable/graphbg_traning_off"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="8dp">
                                <View
                                    android:layout_weight="66"
                                    android:background="@color/colorOkhome"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>
                    <!-- graph -->
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:text="Basic Training 2"
                                    android:textSize="15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlueBlack"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>
                            <TextView
                                android:layout_alignParentRight="true"
                                style="@style/FontOpenSansLight"
                                android:text="2/4"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorLightBlueGray"
                                android:layout_centerVertical="true" />


                        </RelativeLayout>

                        <!-- graph -->
                        <FrameLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="7dp">
                                <View
                                    android:background="@drawable/graphbg_traning_off"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="8dp">
                                <View
                                    android:layout_weight="33"
                                    android:background="@color/colorOkhome"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        style="@style/FontOpenSansLight"
                        android:textColor="@color/colorOkhome"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="13sp"
                        android:text="â€» What are these trainings?"/>

                </LinearLayout>
            </LinearLayout>


            <!-- title -->
            <LinearLayout
                android:layout_marginTop="26dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="40dp"
                    style="@style/FontOpenSansLight"
                    android:text="NEXT JOB TRAINING"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightBlueGray"/>


            </LinearLayout>



            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginRight="22dp"
                    android:background="#000000"
                    android:layout_width="1px"
                    android:layout_height="84dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="-6dp"
                        style="@style/FontOpenSansRegular"
                        android:text="General Cleaning"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepGray"
                        android:layout_centerVertical="true" />

                    <TextView
                        style="@style/FontOpenSansLight"
                        android:text="Our cleaning is very professional and suitable for you"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlueBlack"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:layout_marginTop="5dp"
                        style="@style/FontOpenSansLight"
                        android:text="16 Jan 2018, 10:00 AM"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#66000000"
                        android:layout_centerVertical="true" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:layout_width="5dp"
            android:layout_height="5dp">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_margin="1px"
                />

        </LinearLayout>

        <LinearLayout
            android:background="#000000"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="23dp"
            android:layout_width="5dp"
            android:layout_height="5dp">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_margin="1px"
                />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>
