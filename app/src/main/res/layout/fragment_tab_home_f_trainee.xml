<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="22dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--profile-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <!-- sample datas -->

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_model4"/>
                        <ImageView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:src="@drawable/circle_stroke_white" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/main_vgProfile"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PROFILE"
                                    android:textColor="@color/colorLightBlueGray"
                                    android:textSize="13sp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true">

                                    <TextView
                                        style="@style/FontOpenSansLight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="Michel Bay"
                                        android:textColor="@color/colorDeepGray"
                                        android:textSize="22sp" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Trainee, 32, Male"
                                    android:textColor="@color/colorBlueGray"
                                    android:textSize="13sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="#5bbfec"
                    android:layout_width="33dp"
                    android:layout_height="33dp">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_more_white"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#44000000" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_setting_type3" />

                </LinearLayout>
            </RelativeLayout>

            <!-- graph -->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:background="@drawable/bg_item_training"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp" android:layout_marginBottom="8dp"
                        android:paddingLeft="26dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/FontOpenSansLight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="Basic Training"
                                        android:textColor="@color/colorBlueBlack"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="2/4"
                                    android:textColor="@color/colorLightBlueGray"
                                    android:textSize="14sp" />


                            </RelativeLayout>

                            <!-- graph -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginTop="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="4">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#16acf2" />

                                    <View
                                        android:layout_marginLeft="2dp"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#16acf2" />

                                    <View
                                        android:layout_marginLeft="2dp"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/graphbg_traning_off" />

                                    <View
                                        android:layout_marginLeft="2dp"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/graphbg_traning_off" />
                                </LinearLayout>
                            </FrameLayout>

                        </LinearLayout>
                        <!-- graph -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/FontOpenSansLight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="Advenced Training"
                                        android:textColor="@color/colorBlueBlack"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <TextView
                                    style="@style/FontOpenSansLight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="2/4"
                                    android:textColor="@color/colorLightBlueGray"
                                    android:textSize="14sp" />


                            </RelativeLayout>

                            <!-- graph -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginTop="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="100">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/graphbg_traning_off" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="100">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:weightSum="4">

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#16acf2" />

                                        <View
                                            android:layout_marginLeft="2dp"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#16acf2" />

                                        <View
                                            android:layout_marginLeft="2dp"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#16acf2" />

                                        <View
                                            android:layout_marginLeft="2dp"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/graphbg_traning_off" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:visibility="gone"
                                android:layout_width="14dp"
                                android:adjustViewBounds="true"
                                android:layout_height="wrap_content" android:src="@drawable/ic_substract"/>
                            <TextView
                                style="@style/FontOpenSansLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="center"
                                android:text="What are these trainings?"
                                android:textColor="@color/colorOkhome"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="NEXT JOB TRAINING"
                        android:textColor="@color/colorLightBlueGray"
                        android:textSize="16sp" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="45dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:paddingTop="5dp" android:paddingBottom="8dp"
                            android:paddingLeft="26dp"
                            android:background="@drawable/bg_item_training"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/FontOpenSansLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="General Cleaning"
                                android:textColor="@color/colorDeepGray"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginTop="2dp"
                                style="@style/FontOpenSansLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Our cleaning is very professional and suitable for you"
                                android:textColor="@color/colorBlueGray"
                                android:textSize="14sp" />

                            <TextView
                                style="@style/FontOpenSansLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="12dp"
                                android:text="16 Jan 2018, 10:00 AM"
                                android:textColor="#66000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="#484d9e"
                        android:layout_width="33dp"
                        android:layout_height="33dp">

                        <ImageView
                            android:src="@drawable/ic_right_simplearrow_left_white"
                            android:adjustViewBounds="true"
                            android:layout_width="14dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:background="#000000">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2px"
                android:background="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:background="#000000">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2px"
                android:background="#ffffff" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
