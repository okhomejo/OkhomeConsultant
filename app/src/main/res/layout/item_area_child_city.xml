<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/itemArea_rlHeader"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <LinearLayout
            android:id="@+id/itemAreaChild_vbtnCheck"
            android:layout_width="65dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/itemAreaChild_ivCheck"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_check_not"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/itemAreaChild_vbtnArrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/itemAreaChild_vbtnCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemAreaChild_tvCityTitle"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textSize="18sp"
                    android:text="Jakarta barat"
                    android:textColor="@color/colorBlueBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/itemAreaChild_tvSubTitle"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightBlueGray"
                    android:text="Not selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/itemAreaChild_ivArrow"
                    android:src="@drawable/ic_right_simplearrow_black"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>