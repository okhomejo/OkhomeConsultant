<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:id="@+id/itemArea_rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/itemArea_btnParentRegion"
            android:background="@drawable/bg_common_edittext"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemArea_tvCityTitle"
                android:gravity="center_vertical"
                style="@style/FontOpenSansLight"
                android:textSize="21sp"
                android:text="JAKARTA"
                android:textColor="@color/colorBlueBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/itemArea_tvSelectedAmt"
                android:gravity="center_vertical"
                style="@style/FontOpenSansLight"
                android:textSize="15sp"
                android:textColor="@color/colorLightBlueGray"
                android:text="11 areas selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:adjustViewBounds="true"
            android:src="@drawable/ic_right_simplearrow_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="17dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>