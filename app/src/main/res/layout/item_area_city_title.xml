<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/itemArea_rlHeader"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/itemArea_btnParentRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemArea_tvCityTitle"
                android:gravity="center_vertical"
                style="@style/FontOpenSansLight"
                android:textSize="18sp"
                android:text="JAKARTA"
                android:textColor="@color/colorBlueBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/itemArea_tvSelectedAmt"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansSemibold"
                    android:textSize="14sp"
                    android:textColor="@color/colorOkhomeLight"
                    android:text="11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textSize="13sp"
                    android:textColor="@color/colorLightBlueGray"
                    android:text="areas selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:adjustViewBounds="true"
            android:src="@drawable/ic_right_simplearrow_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="14dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>


</RelativeLayout>