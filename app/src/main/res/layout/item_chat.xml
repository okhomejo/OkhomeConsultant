<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:id="@+id/itemChat_vgHeaderDate"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                style="@style/FontOpenSansSemibold"
                android:id="@+id/itemChat_tvHeaderDate"
                android:textSize="12sp"
                android:text="3월 23일"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="18dp"
            android:orientation="vertical"
            android:layout_marginTop="28dp"
            android:id="@+id/itemChat_vgSystemMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                style="@style/FontOpenSansSemibold"
                android:id="@+id/itemChat_tvSystemMessageDate"
                android:textSize="12sp"
                android:text="3월 23일"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                style="@style/FontOpenSansLight"
                android:id="@+id/itemChat_tvSystemMessage"
                android:textSize="13sp"
                android:textColor="@color/colorBlueGrayDeep"
                android:text="This is system message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include android:id="@+id/itemChat_vgChatMine" layout="@layout/item_chatbox_mine" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <include android:id="@+id/itemChat_vgChatOpposite" layout="@layout/item_chatbox_opposite" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:id="@+id/itemChat_vBottomPadding"
            android:layout_width="match_parent"
            android:layout_height="6dp" />

    </LinearLayout>
</RelativeLayout>
