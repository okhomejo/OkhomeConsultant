<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="1dp" android:paddingBottom="1dp"
                android:layout_marginLeft="1.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <LinearLayout
                    android:paddingLeft="25dp"
                    android:background="@drawable/bg_leftline_bold_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/itemCleaningTask_tvTitle"
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="-2dp"
                        android:text="General Cleaning"
                        android:textColor="@color/colorBlueBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/itemCleaningTask_tvAddress"
                        android:layout_marginBottom="4dp"
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="A3205, Puri casablanca, JL Casablanca"
                        android:textColor="@color/colorBlueGray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/itemCleaningTask_vgRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </LinearLayout>

                    <TextView
                        android:id="@+id/itemCleaningTask_tvDate"
                        android:layout_marginTop="14dp"
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Cleaning on 16 Jan 2018, 10:00 AM"
                        android:textColor="#66000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
