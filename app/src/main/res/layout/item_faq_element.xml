<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="18dp"
    android:paddingLeft="16dp" android:paddingRight="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="2dp" android:paddingBottom="2dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="1.5dp"
        android:paddingLeft="20dp"
        android:background="@drawable/bg_leftline_bold_gray_3dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemFaqs_tvTitle"
                style="@style/FontOpenSansLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="faq item"
                android:textColor="@color/colorBlueBlack"
                android:textSize="18sp" />

            <LinearLayout
                android:visibility="gone"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="2dp"
                    android:adjustViewBounds="true"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rightarrow_gray"
                    android:layout_centerVertical="true"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemManualParentItem_vRightArrow"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@color/colorOkhomeLight2"
            android:layout_width="31dp"
            android:layout_height="31dp">

            <ImageView
                android:src="@drawable/ic_right_simplearrow_left_white"
                android:adjustViewBounds="true"
                android:layout_width="13dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>