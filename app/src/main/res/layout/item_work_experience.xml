<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <RelativeLayout
        android:id="@+id/itemArea_rlHeader"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/itemArea_btnParentRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemJob_tvPosition"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:layout_marginRight="40dp"
                    android:text="IT Consultant / OKhome"
                    android:textColor="@color/colorBlueBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/itemJob_tvDate"
                    android:gravity="center_vertical"
                    style="@style/FontOpenSansLight"
                    android:textSize="13sp"
                    android:textColor="@color/colorLightBlueGray"
                    android:text="Jun, 2016 - Jun, 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/itemJob_vbtnRemoveExp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_cross"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:padding="5dp"
            android:alpha="0.9"
            android:layout_height="wrap_content"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>

</LinearLayout>