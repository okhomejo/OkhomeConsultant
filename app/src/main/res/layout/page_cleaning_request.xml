<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2px" android:background="#22000000"/>-->

        <LinearLayout
            android:background="#33000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <FrameLayout
                android:layout_margin="1px"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/map_sample3"/>

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp" android:paddingLeft="12dp" android:paddingRight="12dp"
                    android:background="#dd000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_pushlogo_white"
                            android:adjustViewBounds="true"
                            android:layout_width="13dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:singleLine="true"
                            style="@style/FontOpenSansLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="09 Jan 18, 16:00, 5 hours"
                            android:textColor="#ffffff"
                            android:textSize="14.5sp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2px" android:background="#33000000"/>-->

    </LinearLayout>

    <!-- contents -->
    <LinearLayout
        android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 기타 -->
        <FrameLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="@color/colorLightBlueGray"/>
            <TextView
                android:background="#ffffff"
                style="@style/FontOpenSansLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="SPECIFICATION"
                android:textColor="@color/colorLightBlueGray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/pageCleaningRequest_vbtnSeeDetail"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                style="@style/FontOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEE DETAILS"
                android:textColor="@color/colorOkhomeLight2"
                android:textSize="15sp" />

        </FrameLayout>

        <LinearLayout
            android:paddingTop="3dp" android:paddingBottom="5dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:background="@drawable/bg_leftline_bold_gray_4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_tab_price2"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="JL Senopati, 185, Jakarta central, Jakarta DKI"
                        android:textColor="@color/colorPurpleBlack"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_wallet"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Rp 28,000"
                        android:textColor="@color/colorPurpleBlack"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home1"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Apartment, 3 Rooms, 3 Restrooms, 150sq"
                        android:textColor="@color/colorPurpleBlack"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_person2"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FontOpenSansLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="2 persons"
                        android:textColor="@color/colorPurpleBlack"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
